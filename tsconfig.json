{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "target": "es2020",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir":"./src",
        "outDir":"./dist",
        "watch":false,
        "declaration": true,
        "alwaysStrict": true,
        "removeComments": true,
        "preserveWatchOutput": true
    },
    "include":[
        "./src/**/*"
    ],
    "exclude":[
        "node_modules"
    ]
}